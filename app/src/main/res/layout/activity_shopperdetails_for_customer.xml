<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_image"
    android:orientation="vertical"
    tools:context=".Shopperdetails_for_customer">

    <include
        android:id="@+id/toolbar_shoppers_view_details"
        layout="@menu/bar_layout">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/nav_menu_header_bg"
                app:srcCompat="@drawable/nav_menu_header_bg" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:clickable="true"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFFFF"
                android:id="@+id/profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-130dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image">

                <TextView
                    android:id="@+id/Shopper_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/deroidserifboldfont"
                    android:textColor="@color/profiledetaisheader"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Shopper_Name"
                    android:fontFamily="@font/quicksandbold"
                    android:textSize="17dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/profiledetailsvalue"/>

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:textSize="17dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/profiledetailsvalue" />


                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:id="@+id/linediver"
                        android:layout_below="@+id/contact"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/divider_line" />

                    <TextView
                        android:id="@+id/shopdetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/deroidserifboldfont"
                        android:background="@color/colorPrimaryDark"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/linediver"
                        android:layout_marginTop="-10dp"
                        android:text="SHOP DEATILS"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearlayout1"
                        android:layout_below="@+id/shopdetails"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/deroidserifboldfont"
                            android:paddingStart="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Shop Name:"
                            android:textColor="@color/profiledetaisheader"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/shopname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandbold"
                            android:paddingStart="15dp"
                            android:textSize="17dp"
                            android:textColor="@color/profiledetailsvalue"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/divider_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/deroidserifboldfont"
                            android:paddingStart="15dp"
                            android:text="Address:"
                            android:textColor="@color/profiledetaisheader"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/shopaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandbold"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textSize="17dp"
                            android:textColor="@color/profiledetailsvalue"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/divider_line" />

                        <TextView
                            android:id="@+id/landmarkhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/deroidserifboldfont"
                            android:paddingStart="15dp"
                            android:text="LandMark:"
                            android:textColor="@color/profiledetaisheader"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/shoplandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandbold"
                            android:paddingStart="15dp"
                            android:textSize="17dp"
                            android:textColor="@color/profiledetailsvalue"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/landmarkhead_belowline"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/divider_line" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/deroidserifboldfont"
                            android:paddingStart="15dp"
                            android:text="Area Location:"
                            android:textColor="@color/profiledetaisheader"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/shopsubcity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandbold"
                            android:paddingStart="15dp"
                            android:textSize="17dp"
                            android:textColor="@color/profiledetailsvalue"/>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/divider_line" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/deroidserifboldfont"
                            android:paddingStart="15dp"
                            android:text="City:"
                            android:textColor="@color/profiledetaisheader"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/shopcity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandbold"
                            android:paddingStart="15dp"
                            android:textSize="17dp"
                            android:textColor="@color/profiledetailsvalue"/>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/divider_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/deroidserifboldfont"
                            android:paddingStart="15dp"
                            android:text="PinCode:"
                            android:textColor="@color/profiledetaisheader"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/shoppincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandbold"
                            android:paddingStart="15dp"
                            android:textSize="17dp"
                            android:textColor="@color/profiledetailsvalue"/>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/divider_line" />

                    </LinearLayout>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_layout"
                    android:padding="15dp">

                    <Button
                        android:id="@+id/order_book_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/deroidserifboldfont"
                        android:background="@drawable/buttonbackground"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="BOOK ORDER" />
                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>



    </LinearLayout>
